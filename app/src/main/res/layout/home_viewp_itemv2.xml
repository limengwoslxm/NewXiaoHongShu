<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
            android:id="@+id/placeholder_main"
            android:layout_width="210dp"
            android:layout_height="260dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/xyvg_homepage_placeholder_main"/>
        <ImageView
            android:id="@+id/placeholder_bubble1"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/placeholder_main"
            android:layout_alignLeft="@+id/placeholder_main"
            android:layout_marginTop="10dp"
            android:src="@drawable/xyvg_homepage_placeholder_bubble1"/>
        <ImageView
            android:id="@+id/placeholder_bubble2"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/placeholder_main"
            android:layout_alignBottom="@+id/placeholder_main"
            android:layout_marginLeft="-28dp"
            android:layout_marginBottom="27dp"
            android:src="@drawable/xyvg_homepage_placeholder_bubble2"/>
        <ImageView
            android:id="@+id/placeholder_bubble3"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/placeholder_main"
            android:layout_alignRight="@id/placeholder_main"
            android:layout_marginTop="30dp"
            android:layout_marginRight="-15dp"
            android:src="@drawable/xyvg_homepage_placeholder_bubble3"/>
        <ImageView
            android:id="@+id/placeholder_bubble4"
            android:layout_width="185dp"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/placeholder_main"
            android:layout_alignBottom="@+id/placeholder_main"
            android:layout_marginBottom="18dp"
            android:src="@drawable/xyvg_homepage_placeholder_bubble4"/>
        <TextView
            android:id="@+id/guanzhu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeholder_main"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:text="你关注的好友动态都会在这里实时呈现"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/guanzhu_button"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="马上关注"
            android:textColor="@color/white"
            android:layout_below="@id/guanzhu_text"
            android:layout_centerHorizontal="true"
            android:background="@drawable/guanzhu_button_shape"
            style="?android:borderlessButtonStyle"/>
</RelativeLayout>